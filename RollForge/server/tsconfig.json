{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*",
        "src/types/*",
        "src/db/*",
        "src/middlewares/*",
        "src/utils/*",
        "src/controllers/*",
        "src/models/*",
        "src/routes/*",
        "src/schemas/*",
        "src/public/*"
      ]
    },
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["src", "app.ts"],
  "exclude": ["node_modules", "dist"]
}
