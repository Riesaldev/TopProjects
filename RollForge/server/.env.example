# ─── Server ─────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development

# ─── Database (MySQL) ────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yourpassword
DB_NAME=rollforge

# ─── JWT ────────────────────────────────────────────────────────────────────
JWT_SECRET=change_me_to_a_long_random_string
JWT_EXPIRES_IN=7d

# ─── Email (Nodemailer) ──────────────────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=no-reply@rollforge.app
SMTP_PASS=smtp_password
EMAIL_FROM="RollForge <no-reply@rollforge.app>"

# ─── CORS ─────────────────────────────────────────────────────────────────────
CLIENT_URL=http://localhost:5173
